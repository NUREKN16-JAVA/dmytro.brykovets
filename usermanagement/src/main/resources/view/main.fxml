<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:id="mainGridPane"
          alignment="center"
          hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ua.nure.brykovets.dmytro.usermanagement.gui.MainController"
          prefHeight="600" prefWidth="800">

    <TableView fx:id="usersTable" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"></TableView></columnResizePolicy>
        <columns>
            <!--<TableColumn text="ID" minWidth="60.0" maxWidth="60.0" />-->
            <TableColumn text="ID"/>
            <TableColumn text="First name"/>
            <TableColumn text="Last name"/>
            <TableColumn text="Date of birth"/>
        </columns>
    </TableView>

    <HBox GridPane.rowIndex="1" spacing="30" alignment="CENTER_RIGHT">
        <padding><Insets top="10" right="20" bottom="20" left="20"/></padding>
        <Button fx:id="addButton" text="Add" minWidth="80"/>
        <Button fx:id="editButton" text="Edit" minWidth="80"/>
        <Button fx:id="deleteButton" text="Delete" minWidth="80"/>
        <Button fx:id="detailsButton" text="Details" minWidth="80"/>
    </HBox>

</GridPane>
